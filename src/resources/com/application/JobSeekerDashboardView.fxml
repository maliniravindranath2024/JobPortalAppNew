<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?> <!-- Add this line -->

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.application.JobSeekerViewController">

    <!-- Left Pane with Menu Options -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 20;">
            <Label text="Menu" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <!-- Navigation Buttons -->
            <Button text="View Jobs" prefWidth="150" onAction="#handleViewJobs" />
            <Button text="View Job Status" prefWidth="150" onAction="#handleViewStatusOfJob" />
            <Button text="Edit/Update Profile" prefWidth="150" onAction="#handleEditUpdateProfile" />
            <Button text="Logout" prefWidth="150" onAction="#handleLogout" />


        </VBox>
    </left>

    <!-- Central Area for Displaying Views -->
    <center>
        <StackPane fx:id="contentPane" style="-fx-padding: 20;" prefHeight="500" prefWidth="500"/>
    </center>
</BorderPane>