<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.application.AdminDashboardController">

    <!-- Left Pane with Menu and Navigation Buttons -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #f9f9f9; -fx-padding: 20;">
            <Label text="Admin Menu" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 5 0 10 0;" />

            <!-- Navigation Options -->
            <Button text="Add New Admin" prefWidth="200" onAction="#handleAddNewAdmin"/>
            <Button text="View All Users" prefWidth="200" onAction="#handleViewAllUsers"/>
            <Button text="View All Jobs" prefWidth="200" onAction="#handleViewAllJobs"/>
            <Button text="Logout" prefWidth="150" onAction="#handleLogout" />
        </VBox>
    </left>

    <!-- Center Pane for Dynamic Content -->
    <center>
        <StackPane fx:id="contentPane" style="-fx-padding: 20;" prefHeight="500" prefWidth="500">
            <!-- Placeholder for dynamic content -->
            <Label text="Welcome to the Admin Dashboard!" style="-fx-font-size: 16px;"/>
        </StackPane>
    </center>
</BorderPane>