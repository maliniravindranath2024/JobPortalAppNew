<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.application.UpdateCompanyProfileController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="10" layoutX="20.0" layoutY="20.0" prefWidth="560.0" prefHeight="360.0">
        <!-- Title -->
        <Label text="Update Company Profile" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- Input Fields -->
        <HBox spacing="10">
            <Label text="Company Name:" />
            <TextField fx:id="companyNameField" promptText="Enter company name" />
        </HBox>

        <HBox spacing="10">
            <Label text="Website:" />
            <TextField fx:id="companyWebsiteField" promptText="Enter company website" />
        </HBox>

        <HBox spacing="10">
            <Label text="Contact Person:" />
            <TextField fx:id="contactPersonField" promptText="Enter contact person" />
        </HBox>

        <HBox spacing="10">
            <Label text="Phone:" />
            <TextField fx:id="phoneField" promptText="Enter phone number" />
        </HBox>

        <HBox spacing="10">
            <Label text="Description:" />
            <TextArea fx:id="companyDescriptionField" promptText="Enter company description" prefHeight="80.0" wrapText="true" />
        </HBox>

        <!-- Save Button -->
        <Button text="Save Changes" fx:id="saveButton" onAction="#saveProfile" />
    </VBox>
</AnchorPane>