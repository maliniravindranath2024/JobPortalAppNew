<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.application.EmployerDashboardController">

    <!-- Left Pane with Menu Options -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 20;">
            <Label text="Menu" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <!-- Navigation Buttons -->
            <Button text="Add New Job" prefWidth="150" onAction="#handleAddNewJob" />
            <Button text="View Candidates" prefWidth="150" onAction="#handleViewCandidates" />
            <Button text="View All Jobs Posted" prefWidth="150" onAction="#handleViewAllJobs" />
            <Button text="Edit Job Posting" prefWidth="150" onAction="#handleEditJob" />
            <Button text="Schedule Interview" prefWidth="150" onAction="#handleInterview" />
            <Button text="Update Candidate Status" prefWidth="150" onAction="#handleUpdateCandidateStatus" />
            <Button text="Update Company Profile" prefWidth="150" onAction="#handleUpdateProfile" />
            <Button text="Logout" prefWidth="150" onAction="#handleLogout" />
        </VBox>
    </left>

    <!-- Central Area for Displaying Views -->
    <center>
        <StackPane fx:id="contentPane" style="-fx-padding: 20;" prefHeight="500" prefWidth="500"/>
    </center>
</BorderPane>