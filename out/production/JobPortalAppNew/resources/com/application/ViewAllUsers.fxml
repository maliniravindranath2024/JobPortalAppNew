<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.application.ViewAllUsersController" spacing="15" alignment="TOP_CENTER" prefWidth="600" prefHeight="400">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <!-- Title -->
    <Label text="View All Users" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- TableView -->
    <TableView fx:id="userTableView" prefWidth="580" VBox.vgrow="ALWAYS">
        <!-- Table Columns -->
        <columns>
            <TableColumn text="User ID" fx:id="userIdColumn" prefWidth="100" />
            <TableColumn text="Email" fx:id="emailColumn" prefWidth="200" />
            <TableColumn text="Password" fx:id="passwordColumn" prefWidth="200" visible="false"/>
            <TableColumn text="Role" fx:id="roleColumn" prefWidth="150" />
            <TableColumn text="Action" fx:id="actionColumn" prefWidth="100" />
        </columns>
    </TableView>
</VBox>